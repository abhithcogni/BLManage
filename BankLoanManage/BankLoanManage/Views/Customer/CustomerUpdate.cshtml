@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Update Customer Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        body {
            background-color: #f4ece4;
        }

    </style>
    <script>
        $(document).ready(function() {
            $(".card").addClass("fade-in");
        });
    </script>
</head>

<body>
    <div id="navbar-container"></div>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow border-0">
                    <div class="text-center border-0 p-3 bg-dark text-white">
                        <h4>Update Customer Details</h4>
                    </div>
                    <div class="card-body p-4">
                        <form id="updateCustomerForm">
                            <div class="mb-3 form-floating">
                                <input type="text" class="form-control" id="floatingName" name="name"
                                       placeholder="Name" value="John Doe" required>
                                <label for="floatingName" class="ms-2">Name</label>
                            </div>
                            <div class="mb-3 form-floating">
                                <input type="email" class="form-control" id="floatingEmail" name="email"
                                       placeholder="Email" value="john.doe@example.com" required>
                                <label for="floatingEmail" class="ms-2">Email</label>
                            </div>
                            <div class="mb-3 form-floating">
                                <input type="text" class="form-control" id="floatingPhone" name="phone"
                                       placeholder="Phone" value="9876543210" required>
                                <label for="floatingPhone" class="ms-2">Phone</label>
                            </div>
                            <div class="mb-3 form-floating">
                                <input type="text" class="form-control" id="floatingAddress" name="address"
                                       placeholder="Address" value="123 Main Street" required>
                                <label for="floatingAddress" class="ms-2">Address</label>
                            </div>
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-success w-50 py-2">Update Details</button>
                                <p class="mt-2"><a href="@Url.Action("CustomerDashboard","Customer")">Back to Customer Page</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        fetch('navbar.html')
            .then(response => response.text())
            .then(data => {
                document.getElementById('navbar-container').innerHTML = data;

                // Optional: Run any JavaScript that depends on the navbar being loaded
                // For example, initializing event listeners within the navbar
            });
    </script>
</body>

</html>