@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Remove the <html>, <head>, and <body> tags *@
<style>
    /* Ensure scroll buttons are positioned relative to the viewport */
    #scrollButtons {
        position: fixed; /* Fix the buttons to the viewport */
        bottom: 70px; /* Adjusted to account for fixed height */
        right: 20px;
        z-index: 1050; /* Ensure they're above other elements */
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    #scrollUpButton,
    #scrollDownButton {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        /* Add styling for the buttons */
        background-color: #007bff; /* Bootstrap's primary color */
        color: white;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Add a subtle shadow */
        transition: background-color 0.3s ease; /* Smooth transition */
    }

        #scrollUpButton:hover,
        #scrollDownButton:hover {
            background-color: #0056b3; /* Darker shade on hover */
        }

    /* Ensure that main content is above the footer. */
    main {
        position: relative; /* Declare main as relative, so z-index works on its children*/
        z-index: 1;
    }

    footer {
        position: relative;
        z-index: 1000;
    }

    .chart-container {
        width: 100%; /* Make sure the container takes up the full width */
        height: 300px; /* Give it a reasonable height */
        margin: 0 auto; /* Center the chart if needed */
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4">Your Loan Reports</h2>

    <div class="report-section">
        <h5 class="report-title">Loan Summary</h5>
        <p><strong>Total Loans Applied:</strong> <span id="totalLoansApplied"></span></p>
        <p><strong>Total Loans Approved:</strong> <span id="totalLoansApproved"></span></p>
        <p><strong>Total Outstanding Balance:</strong> <span id="totalOutstandingBalance"></span></p>
    </div>

    <div class="report-section">
        <h5 class="report-title">Repayment History</h5>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Loan Application ID</th>
                    <th>Due Date</th>
                    <th>Amount Due</th>
                    <th>Payment Date</th>
                    <th>Payment Status</th>
                </tr>
            </thead>
            <tbody id="repaymentHistoryTableBody">
            </tbody>
        </table>
        <p id="noRepayments" class="text-muted" style="display:none;">No repayment history available.</p>
    </div>

    <div class="report-section">
        <h5 class="report-title">Loan Details</h5>
        <form id="loanDetailsForm">
            <div class="form-group">
                <label for="loanApplicationId">Select Loan Application ID:</label>
                <select class="form-control" id="loanApplicationId">
                    <option value="">-- Select --</option>
                </select>
            </div>
        </form>
        <div id="loanDetails" style="margin-top: 15px;">
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="report-section">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Loan Status Chart</h5>
                        <div class="chart-container">
                            <canvas id="loanStatusChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="report-section">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Repayment Status Chart</h5>
                        <div class="chart-container">
                            <canvas id="repaymentStatusChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="report-section">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Outstanding Balance Over Time</h5>
                        <div class="chart-container">
                            <canvas id="outstandingBalanceChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="scrollButtons">
        <button id="scrollUpButton">↑</button>
        <button id="scrollDownButton">↓</button>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/user_report.js"></script>
}
