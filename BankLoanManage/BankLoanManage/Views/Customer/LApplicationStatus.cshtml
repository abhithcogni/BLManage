@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loan Status</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div id="navbar-container"></div>

    <div class="container justify-content-center align-items-center min-vh-100">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <header class="my-4 text-center">
                    <h1>Loan Status</h1>
                </header>
                <main>
                    <section id="loan-status" class="mb-4">
                        <h2>Loan Applications</h2>
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Application ID</th>
                                    <th>Loan Product</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>123456</td>
                                    <td>Personal Loan</td>
                                    <td>$10,000</td>
                                    <td><span class="badge badge-warning">Pending</span></td>
                                </tr>
                                <tr>
                                    <td>789012</td>
                                    <td>House Loan</td>
                                    <td>$200,000</td>
                                    <td><span class="badge badge-success">Approved</span></td>
                                </tr>
                                <tr>
                                    <td>345678</td>
                                    <td>Gold Loan</td>
                                    <td>$5,000</td>
                                    <td><span class="badge badge-danger">Rejected</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </main>
            </div>
        </div>
    </div>
    <script src="/static/js/status.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        fetch('navbar.html')
            .then(response => response.text())
            .then(data => {
                document.getElementById('navbar-container').innerHTML = data;

                // Optional: Run any JavaScript that depends on the navbar being loaded
                // For example, initializing event listeners within the navbar
            });
    </script>
</body>
</html>
