@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management - KYC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            
        }

        body {
            font-family: 'Inter', sans-serif; /* Using Inter font as preferred */
            background-color: #f4ece4; /* Light background for the body */
            color: #212529; /* Dark text color for contrast */
        }

        .container {
            margin-top: 30px;
            margin-bottom: 30px;
        }

        .card {
            border: 1px solid #dee2e6; /* Subtle border for cards */
            border-radius: 0.75rem; /* Rounded corners for cards */
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05); /* Subtle shadow for depth */
            background-color: #fff; /* Light background for cards */
            color: #212529; /* Dark text color for cards */
        }

        .card-header {
            background-color: #e9ecef; /* Lighter header for cards */
            color: #212529;
            border-bottom: 1px solid #ced4da; /* Subtle border for header */
            border-top-left-radius: 0.75rem;
            border-top-right-radius: 0.75rem;
            padding: 1rem 1.5rem;
        }

        .card-body {
            padding: 2rem; /* More padding within card body */
        }

        .form-label {
            font-weight: 500; /* Slightly bolder labels */
            color: #495057; /* Darker label text */
        }

        .form-control,
        .form-select {
            background-color: #fff; /* Light input fields */
            color: #495057; /* Dark text in input fields */
            border: 1px solid #ced4da; /* Subtle border for inputs */
            border-radius: 0.375rem; /* Rounded corners for inputs */
        }

            .form-control:focus,
            .form-select:focus {
                background-color: #fff;
                color: #495057;
                border-color: #80bdff; /* Highlight focus */
                box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
            }

            .form-control::placeholder { /* Style placeholder text */
                color: #6c757d;
            }

        .btn-primary {
            background-color: #007bff; /* Bootstrap primary blue */
            border-color: #007bff;
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            color: #fff; /* White text on primary button */
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .badge {
            font-size: 0.9em; /* Slightly larger badge text */
            padding: 0.5em 0.75em; /* More padding for badges */
        }

        .section-divider {
            margin-top: 2rem;
            margin-bottom: 2rem;
            border-top: 1px solid #ced4da;
        }

        .upload-icon {
            font-size: 1.5rem;
            margin-right: 0.5rem;
        }
    </style>
</head>

<body class=" text-dark">
    <div id="navbar-container"></div>
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="card border-dark">
                    <div class="card-header bg-dark text-white">
                        <h4 class="mb-0">Customer KYC Details</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="mb-3 text-muted">KYC Status</h5>
                        <div class="d-flex align-items-center">
                            <p class="mb-0 me-2">Current Status:</p>
                            <span class="badge bg-warning text-dark rounded-pill">Pending</span>
                        </div>
                        <hr class="section-divider">
                        <h5 class="mb-3 text-muted">Personal Information</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="firstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="firstName" placeholder="Enter first name">
                            </div>
                            <div class="col-md-6">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName" placeholder="Enter last name">
                            </div>
                            <div class="col-12">
                                <label for="email" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="email" placeholder="name@example.com">
                            </div>
                        </div>

                        <hr class="section-divider">

                        <h5 class="mb-3 text-muted"><i class="fas fa-file-upload upload-icon"></i>Upload Documents</h5>
                        <div class="mb-3">
                            <label for="documentType" class="form-label">Document Type</label>
                            <select class="form-select" id="documentType">
                                <option selected disabled>Choose document type...</option>
                                <option value="passport">Passport</option>
                                <option value="dl">Driver's License</option>
                                <option value="id_card">National ID Card</option>
                                <option value="utility_bill">Utility Bill (Proof of Address)</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="documentUpload" class="form-label">Upload File</label>
                            <input class="form-control" type="file" id="documentUpload">
                            <div class="form-text text-muted">
                                Please upload a clear scanned copy or photo of your document. Max file size: 5MB.
                            </div>
                        </div>
                        <button type="button" class="btn btn-dark mb-3">
                            <i class="fas fa-cloud-upload-alt"></i> Upload Document
                        </button>

                        

                        
                        


                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-success btn-lg">Submit KYC Details</button>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    
    <script>
        // Example: Script to change KYC status (for demonstration)
        // In a real application, this would be driven by backend data.
        $(document).ready(function() {
            // Simulate fetching KYC status
            setTimeout(function() {
                // const kycStatus = "Approved"; // or "Pending" or "Not Approved"
                // const remarks = "All documents verified successfully.";

                const kycStatus = "Pending";
                const remarks = "Awaiting review of submitted documents.";

                // const kycStatus = "Not Approved";
                // const remarks = "ID document is unclear. Please re-upload.";

                const statusBadge = $('.badge');
                const remarksTextarea = $('#adminRemarks');

                statusBadge.removeClass('bg-warning bg-success bg-danger text-dark'); // Remove all classes first

                if (kycStatus === "Approved") {
                    statusBadge.addClass('bg-success').text('Approved');
                    remarksTextarea.val(remarks);
                } else if (kycStatus === "Not Approved") {
                    statusBadge.addClass('bg-danger').text('Not Approved');
                    remarksTextarea.val(remarks);
                } else { // Pending
                    statusBadge.addClass('bg-warning text-dark').text('Pending');
                    remarksTextarea.val(remarks);
                }
            }, 2000); // Simulate a delay
        });
    </script>
    <script>
        fetch('navbar.html')
            .then(response => response.text())
            .then(data => {
                document.getElementById('navbar-container').innerHTML = data;

                // Optional: Run any JavaScript that depends on the navbar being loaded
                // For example, initializing event listeners within the navbar
            });
    </script>
</body>

</html>