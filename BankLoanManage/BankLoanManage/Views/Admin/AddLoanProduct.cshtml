@{
    Layout = "~/Views/Shared/AdminUtility.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Loan Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/adminNav.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="form-container">
        <h2>Create Loan Offerings</h2>
        <form id="loanProductForm">
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="productName" name="productName" required>
            </div>
            <div class="mb-3">
                <label for="interestRate" class="form-label">Interest Rate (%)</label>
                <input type="number" class="form-control" id="interestRate" name="interestRate" required>
            </div>
            <div class="mb-3">
                <label for="minAmount" class="form-label">Minimum Amount</label>
                <input type="number" class="form-control" id="minAmount" name="minAmount" required>
            </div>
            <div class="mb-3">
                <label for="maxAmount" class="form-label">Maximum Amount</label>
                <input type="number" class="form-control" id="maxAmount" name="maxAmount" required>
            </div>
            <div class="mb-3">
                <label for="tenure" class="form-label">Tenure (months)</label>
                <input type="number" class="form-control" id="tenure" name="tenure" required>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Add Loan Product</button>
            </div>
        </form>
    </div>

    <script>
        $(document).ready(function () {
            // The navbar and sidebar are now part of the layout,
            // so we don't need to load them here again.

            // Highlight the current page in the sidebar
            $('#sidebar a[href="@Url.Action("AddLoanProduct", "Admin")]"').addClass('active');

            $('#loanProductForm').on('submit', function (event) {
                event.preventDefault();
                const productName = $('#productName').val();
                const interestRate = $('#interestRate').val();
                const minAmount = $('#minAmount').val();
                const maxAmount = $('#maxAmount').val();
                const tenure = $('#tenure').val();

                // For demonstration purposes, let's just log the data.
                // In a real application, you would send this data to the server.
                console.log('Product Name:', productName);
                console.log('Interest Rate:', interestRate);
                console.log('Minimum Amount:', minAmount);
                console.log('Maximum Amount:', maxAmount);
                console.log('Tenure:', tenure);

                // Optionally, you can redirect the user or display a success message here.
                alert('Loan product added (data logged to console)');
                $(this)[0].reset();
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>