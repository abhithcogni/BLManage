@{
    Layout = "~/Views/Shared/AdminUtility.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Loan Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/adminNav.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div id="navbar-container"></div>

    <div class="d-flex-page">
        <div id="sidebar-container">
        </div>
        <div class="main-content">
            <div class="form-container">
                <h2>Create Loan Offerings</h2>
                <form id="loanProductForm">
                    <div class="mb-3">
                        <label for="productName" class="form-label">Product Name</label>
                        <input type="text" class="form-control" id="productName" name="productName" required>
                    </div>
                    <div class="mb-3">
                        <label for="interestRate" class="form-label">Interest Rate (%)</label>
                        <input type="number" class="form-control" id="interestRate" name="interestRate" required>
                    </div>
                    <div class="mb-3">
                        <label for="minAmount" class="form-label">Minimum Amount</label>
                        <input type="number" class="form-control" id="minAmount" name="minAmount" required>
                    </div>
                    <div class="mb-3">
                        <label for="maxAmount" class="form-label">Maximum Amount</label>
                        <input type="number" class="form-control" id="maxAmount" name="maxAmount" required>
                    </div>
                    <div class="mb-3">
                        <label for="tenure" class="form-label">Tenure (months)</label>
                        <input type="number" class="form-control" id="tenure" name="tenure" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Add Loan Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#navbar-container").load("navbarAdmin.html");
            $("#sidebar-container").load("sidebar.html");

            $('#loanProductForm').on('submit', function (event) {
                event.preventDefault();
                const productName = $('#productName').val();
                const interestRate = $('#interestRate').val();
                const minAmount = $('#minAmount').val();
                const maxAmount = $('#maxAmount').val();
                const tenure = $('#tenure').val();

                const newRow = `<tr>
                    <td>${productName}</td>
                    <td>${interestRate}</td>
                    <td>${minAmount}</td>
                    <td>${maxAmount}</td>
                    <td>${tenure}</td>
                </tr>`;

                $('#loanProductsTable tbody').append(newRow);
                $(this)[0].reset();
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
