<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Utility</title>
    <link rel="stylesheet" href="/static/css/adminNav.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .d-flex-page {
            display: flex;
            flex-grow: 1;
        }

        #sidebar {
            background-color: #343a40;
            color: white;
            width: 250px; /* Define a fixed width for the sidebar */
            flex-shrink: 0;
            overflow-y: auto;
            height: 100vh;
            position: sticky;
            top: 0;
        }

            #sidebar .nav-link {
                color: white;
            }

                #sidebar .nav-link:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            margin-left: 250px; /* Match the sidebar width */
        }

        .form-container {
            background-color: #fff;
            padding: 25px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 700px;
            margin: 20px auto 0;
        }

        body {
            background-color: #f4ece4;
        }

        .tagesschrift-regular {
            font-family: "Tagesschrift", system-ui;
            font-weight: 400;
            font-style: normal;
        }

    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tagesschrift&display=swap" rel="stylesheet">
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg  shadow" style="background-color: #161179;">
            <div class="container-fluid">
                <img class="rounded-circle bg-white" src="~/img/Logosmall.jpg" viewBox="0 0 24 24" width="32" height="32" fill="none" style="border: 1px solid #ccc; padding:2px;">
                <a class="navbar-brand tagesschrift-regular text-white me-2" href="@Url.Action("AdminDashBoard", "Admin")">CredWise</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

    <div class="d-flex-page">
        <div id="sidebar" class="p-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <h5><a class="nav-link" href="@Url.Action("AdminDashBoard", "Admin")">Dashboard</a></h5>
                </li>
                <li class="nav-item">
                    <h5>
                        <a class="nav-link" href="@Url.Action("KYCApproval", "Admin")">KYC Approval</a>
                    </h5>
                </li>
                <li class="nav-item">
                    <h5>
                        <a class="nav-link" href="@Url.Action("LoanApproval", "Admin")">Loan Approval</a>
                    </h5>
                </li>
                <li class="nav-item">
                    <h5>
                        <a class="nav-link active" href="@Url.Action("AddLoanProduct", "Admin")">Add Loan Product</a>
                    </h5>
                </li>
                <li class="nav-item">
                   <h5>
                        <a class="nav-link" href="@Url.Action("LoanProducts", "Admin")">Loan Products</a>
                    </h5>
                </li>
                    <li class="nav-item">
                        <h5>
                            <a class="nav-link  text-danger" href="@Url.Action("Login", "Account")">Logout</a>
                        </h5>
                    </li>
            </ul>
        </div>
        <div class="main-content container mt-5">
            @RenderBody()
        </div>
    </div>

    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 bg-light border-top">
            <p class="col-md-4 mb-0 text-muted">
                <a class="navbar-brand text-muted ms-2  tagesschrift-regular" href="@Url.Action("CustomerDashboard", "Customer")">CredWise</a>
                © 2025
            </p>

        <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <div class="me-2 text-muted">
            Siruseri, Tamil Nadu 603103
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
</body>
</html>