    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Customer Management</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <style>
            /* Custom styling for the profile dropdown card */
          
            .tagesschrift-regular {
                font-family: "Tagesschrift", system-ui;
                font-weight: 400;
                font-style: normal;
            }

            html, body {
                margin: 0;
                padding: 0;
                height: 100%; /* Ensure the body takes the full height of the viewport */
            }

            body {
                display: flex;
                flex-direction: column; /* Arrange content vertically */
            }

            main {
                flex: 1; /* Push the footer to the bottom */
            }

            footer {
                margin: 0; /* Remove any default margin */
            }
        </style>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Tagesschrift&display=swap" rel="stylesheet">
    </head>

    <body>

        <nav class="navbar navbar-expand-lg  shadow" style="background-color: #161179;">
            <div class="container-fluid">
                <img class="rounded-circle bg-white" src="~/img/Logosmall.jpg"  width="32" height="32" style="border: 1px solid #ccc; padding:2px;">
                <a class="navbar-brand tagesschrift-regular text-white me-2" href="@Url.Action("Login", "Account")">CredWise</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 m-0 border-top bg-light">
        <p class="col-md-4 mb-0 text-muted">
            <a class="navbar-brand text-muted ms-2  tagesschrift-regular" href="@Url.Action("CustomerDashboard", "Customer")">CredWise</a>
            © 2025
        </p>
            <div class="me-2 text-muted">
                Siruseri, Tamil Nadu 603103
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    </body>

    </html>
