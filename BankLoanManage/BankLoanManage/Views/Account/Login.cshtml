@{
    ViewBag.Title = "Login Customer";
    Layout = "~/Views/Shared/RegisterNav.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Customer Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body class="bg-light">

    <div class="container">
        <div class="row align-items-center">
            <!-- Card Section -->
            <div class="col-md-6">
                <div class="card mt-5 mx-auto shadow border-0 p-4">
                    <div class="card-body">
                        <form id="loginForm">
                            <div class="row g-3">
                                <div class="col-md-12 form-floating p-2">
                                    <input type="email" class="form-control" id="floatingLoginEmail" name="email" placeholder="Email" required>
                                    <label class="ms-2" for="floatingLoginEmail">Email</label>
                                </div>
                                <div class="col-md-12 form-floating p-2">
                                    <input type="password" class="form-control" id="floatingLoginPassword" name="password" placeholder="Password" required>
                                    <label class="ms-2" for="floatingLoginPassword">Password</label>
                                </div>
                            </div>
                            <div class="m-3 text-center">
                                <a href="sidebar.html" class="btn btn-dark w-25 py-2">Login</a>
                            </div>
                            <div class="text-center">
                                <p>Don't have an account? <a href="Account/Register">Register</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Login Section -->
            <div class="col-md-6 text-center">
                <h1>LOGIN NOW...!!</h1>
            </div>
        </div>
    </div>





    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery Scripts -->
</body>

</html>