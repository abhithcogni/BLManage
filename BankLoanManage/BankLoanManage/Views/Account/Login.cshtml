@{

    ViewBag.Title = "Login Customer";

    Layout = "~/Views/Shared/RegisterNav.cshtml";

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Customer Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>

        body {
            background-color: #f4ece4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ensure body is at least viewport height */

            box-sizing: border-box;
        }

        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #f4ece4; /* Match body background */

            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000; /* Ensure it's on top */

            opacity: 1;
            transition: opacity 0.8s ease-in-out;
        }

            .loading-overlay.hidden {
                opacity: 0;
                pointer-events: none; /* Allow interaction with content below */
            }

        .centered-logo {
            max-width: 500px; /* Increased maximum width */

            opacity: 0;
            transform: scale(2); /* Increased initial scale */

            transition: transform 0.8s ease-in-out, opacity 0.8s ease-in-out;
        }

        .loading .centered-logo {
            transform: scale(1);
            opacity: 1;
        }

        .container {
            flex: 1 0 auto; /* Allow container to grow and take available space */

            display: flex;
            align-items: center; /* Vertically align items in the container */

            justify-content: center; /* Horizontally align items in the container */

            box-sizing: border-box;
        }

        /* Footer styles are in the layout */
    </style>
</head>

<body class="loading">

    <div class="loading-overlay">
        <img src="~/img/Logo.jpg" class="centered-logo rounded-circle" alt="Logo">
    </div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="card mt-5 mx-auto shadow border-0 p-4">
                    <div class="card-body">
                        <form id="loginForm" action="@Url.Action("AdminDashBoard", "Admin")">
                            <div class="row g-3">
                                <div class="col-md-12 form-floating p-2">
                                    <input type="email" class="form-control" id="floatingLoginEmail" name="email" placeholder="Email" required>
                                    <label class="ms-2" for="floatingLoginEmail">Email</label>
                                </div>
                                <div class="col-md-12 form-floating p-2">
                                    <input type="password" class="form-control" id="floatingLoginPassword" name="password" placeholder="Password" required>
                                    <label class="ms-2" for="floatingLoginPassword">Password</label>
                                </div>
                            </div>
                            <div class="m-3 text-center">
                                <button type="submit" class="btn btn-dark w-25 py-2">Login</button>
                            </div>
                            <div class="text-center">
                                <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6 text-center">
                <img src="~/img/Logo.jpg" class="card-img-top rounded-circle" style="max-width: 600px; height: auto;" alt="Logo">
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>

        $(document).ready(function() {

            // Delay the removal of the loading overlay

            setTimeout(function() {

                $('.loading-overlay').addClass('hidden');

                $('body').removeClass('loading');

            }, 800); // Adjust the duration as needed

        });
    </script>

</body>

</html>
