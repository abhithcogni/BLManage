                        <form id="loginForm" action="@Url.Action("AdminDashBoard", "Admin")">
                            <div class="row g-3">
                                <div class="col-md-12 form-floating p-2">
                                    <input type="email" class="form-control" id="floatingLoginEmail" name="email" placeholder="Email" required>
                                    <label class="ms-2" for="floatingLoginEmail">Email</label>
                                </div>
                                <div class="col-md-12 form-floating p-2">
                                    <input type="password" class="form-control" id="floatingLoginPassword" name="password" placeholder="Password" required>
                                    <label class="ms-2" for="floatingLoginPassword">Password</label>
                                </div>
                            </div>
                            <div class="m-3 text-center">
                                <button type="submit" class="btn btn-dark w-25 py-2">Login</button>
                            </div>
                            <div class="text-center">
                                <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6 text-center">
                <img src="~/img/Logo.jpg" class="card-img-top rounded-circle" style="max-width: 600px; height: auto;" alt="Logo">
            </div>
